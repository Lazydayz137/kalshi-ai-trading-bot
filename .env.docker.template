# Kalshi AI Trading Bot - Docker Environment Template
# Copy this file to .env and fill in your values

# ======================================
# API CREDENTIALS (REQUIRED)
# ======================================
KALSHI_API_KEY=your_kalshi_api_key_here
XAI_API_KEY=your_xai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ======================================
# DATABASE CONFIGURATION
# ======================================
# Database type: sqlite or postgresql
DATABASE_TYPE=postgresql

# PostgreSQL settings (for production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=kalshi_trading
POSTGRES_USER=kalshi
POSTGRES_PASSWORD=change_this_secure_password

# SQLite settings (for development)
SQLITE_PATH=trading_system.db

# ======================================
# REDIS CONFIGURATION
# ======================================
ENABLE_CACHING=true
CACHE_TYPE=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_secure_password
REDIS_DB=0

# ======================================
# TRADING CONFIGURATION
# ======================================
# Trading mode: true for live trading, false for paper trading
LIVE_TRADING_ENABLED=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ======================================
# DASHBOARD CONFIGURATION
# ======================================
DASHBOARD_PORT=8501

# ======================================
# ADVANCED SETTINGS (Optional)
# ======================================
# Daily AI budget (USD)
DAILY_AI_BUDGET=50.0

# Maximum position size (percentage)
MAX_POSITION_SIZE_PCT=5.0

# Maximum daily loss (percentage)
MAX_DAILY_LOSS_PCT=15.0

# Maximum concurrent positions
MAX_POSITIONS=15
