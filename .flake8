[flake8]
# ==========================================
# Flake8 Configuration
# ==========================================

# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 15

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    .tox,
    migrations,
    __init__.py

# Error codes to ignore
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E402: module level import not at top of file
    E402,
    # F401: imported but unused (sometimes needed for __init__.py)
    # Commented out to catch actual unused imports
    # F401,

# Error codes to always check
select =
    # Pyflakes errors
    F,
    # PEP8 errors
    E,
    # PEP8 warnings
    W,
    # McCabe complexity
    C90,

# Per-file ignores
per-file-ignores =
    # __init__.py files can have unused imports (re-exports)
    __init__.py:F401,F403
    # Test files can have longer lines and unused imports
    tests/*:E501,F401,F811
    # Settings files can have many imports
    src/config/settings*.py:F401

# Plugins
# Enable these if you have the plugins installed:
# - flake8-docstrings
# - flake8-bugbear
# - flake8-comprehensions
# - flake8-simplify

# Docstring conventions (if using flake8-docstrings)
docstring-convention = google

# Statistics
count = true
statistics = true
show-source = true
