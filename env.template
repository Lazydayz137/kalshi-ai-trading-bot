# Kalshi API Configuration
# Get your API key from: https://trading.kalshi.com/settings/api
KALSHI_API_KEY=your_kalshi_api_key_here

# === AI Provider Configuration ===
# You need at least ONE of these providers configured

# OpenRouter API (RECOMMENDED - gives access to multiple models)
# Get your API key from: https://openrouter.ai/keys
# Supports: GPT-4, Claude, Gemini, DeepSeek, Llama, and many more
OPENROUTER_API_KEY=your_openrouter_api_key_here

# xAI API Configuration (OPTIONAL - for Grok models)
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# OpenAI API Configuration (OPTIONAL - direct OpenAI access)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration (OPTIONAL - direct Claude access)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# === AI Model Selection ===
# Which AI provider to use by default
# Options: openrouter, xai, openai, anthropic
DEFAULT_AI_PROVIDER=openrouter

# Model preferences for OpenRouter
# Cost-effective models: deepseek/deepseek-chat, google/gemini-2.0-flash-exp
# Premium models: openai/gpt-4o, anthropic/claude-3.5-sonnet
# Leave empty to use automatic selection
PREFERRED_MODEL=deepseek/deepseek-chat

# === Trading Configuration ===
# Set to 'true' for live trading, 'false' for paper trading
LIVE_TRADING_ENABLED=false

# Paper Trading Configuration
# IMPORTANT: Always start with paper trading to test strategies!
PAPER_TRADING_MODE=true
PAPER_TRADING_BALANCE=10000.00
PAPER_SIMULATE_SLIPPAGE=true
PAPER_SIMULATE_FEES=true

# Trading risk level (conservative, moderate, aggressive)
RISK_LEVEL=conservative

# Daily AI spending limit in USD
DAILY_AI_COST_LIMIT=5.00

# === Logging Configuration ===
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# === Database Configuration ===
DATABASE_URL=sqlite:///trading_system.db

# === Performance Monitoring ===
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL_MINUTES=15

# === Circuit Breaker Settings ===
# Number of failures before circuit opens
CIRCUIT_BREAKER_FAIL_MAX=5
# Timeout in seconds before trying again
CIRCUIT_BREAKER_TIMEOUT=300 